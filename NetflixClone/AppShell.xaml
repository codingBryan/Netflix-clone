<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NetflixClone.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NetflixClone"
    xmlns:views="clr-namespace:NetflixClone.Views"
    Shell.TabBarBackgroundColor="#121212"
    Shell.TabBarTitleColor="White"
    Shell.UnselectedColor="Gray"
    Shell.FlyoutBehavior="Disabled">


    <TabBar>
        <ShellContent
            Shell.TabBarIsVisible="False"
            Title="Home"
            Icon="home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Games"
            Icon="joystick"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="New &amp; hot"
            Icon="netflix"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        <ShellContent
            Title="Downloads"
            Icon="download"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
    </TabBar>

    

</Shell>
